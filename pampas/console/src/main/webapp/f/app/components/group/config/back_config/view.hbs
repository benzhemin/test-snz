{{#component "group-config-back-config"}}
<h2 class="ui header">
  <i class="text file icon"></i>
  <div class="content">
    Back Config
    <div class="sub header">{{cell}}@{{group}}[{{app}}]: {{_DATA_.location}}</div>
  </div>
</h2>
<div class="ui icon info message">
  <i class="info letter icon"></i>
  <div class="content">
    <div class="header">Info</div>
    <div class="ui horizontal bulleted list">
      <div class="item">
        <div class="ui teal label">
          Services
          <div class="detail">{{size _DATA_.services}}</div>
        </div>
      </div>
    </div>
  </div>
</div>
