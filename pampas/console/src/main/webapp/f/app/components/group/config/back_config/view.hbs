<div class="ui divider"></div>
<div class="ui attached top message">
  <div class="header">
    Services
  </div>
</div>
<div class="ui stacked attached bottom segment">
  {{#if _DATA_.services}}
  <table class="ui table segment">
    <thead>
      <tr>
        <th>KEY</th>
        <th>APP</th>
        <th>TYPE</th>
        <th>URI</th>
      </tr>
    </thead>
    <tbody>
      {{#each _DATA_.services}}
      <tr>
        <td>
          {{@key}}
          {{#if desc}}
          <i class="info icon js-desc-popup" data-content="{{desc}}" data-variation="large" data-position="right center"></i>
          {{/if}}
        </td>
        <td>{{app}}</td>
        <td>{{type}}</td>
        <td>{{uri}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <i class="ban circle icon"></i>
  {{/if}}
</div>
{{/component}}
