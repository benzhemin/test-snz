{{#component "group-config-front-config"}}
<h2 class="ui header" id="summary">
  <i class="text file icon"></i>
  <div class="content">
    Front Config
    <div class="sub header">{{cell}}@{{group}}[{{app}}]: {{_DATA_.location}}</div>
  </div>
</h2>
<div class="ui icon info message">
  <i class="info letter icon"></i>
  <div class="content">
    <div class="header">Info</div>
    <div class="ui horizontal bulleted list">
      <div class="item">
        <div class="ui teal label">
          Components
          <div class="detail">{{size _DATA_.components}}</div>
        </div>
      </div>
      <div class="item">
        <div class="ui teal label">
          Mappings
          <div class="detail">{{size _DATA_.mappings}}</div>
        </div>
      </div>
      <div class="item">
        <div class="ui teal label">
          Hrefs
          <div class="detail">{{size _DATA_.Hrefs}}</div>
        </div>
      </div>
    </div>
  </div>
</div>
