<table class="table table-striped table-small" id="supplier-solution-table">
  <thead>
    <tr>
      <th colspan="5" class="left-text" style="padding-left:20px;">供应商方案</th>
    </tr>
    <tr>
      <th>供应商列表</th>
      <th>整体方案</th>
      {{#of status "5,6"}}
        <th>报价</th>
      {{/of}}
      <th>修改时间</th>
    </tr>
  </thead>
  <tbody>
    {{#each solutions}}
      <tr>
        <td>{{supplierName}}</td>
        <td class="solution-download-td" data-file="{{solutionFile}}"></td>
        {{#of ../../status "5,6"}}
        <td><a href="/purchaser/check-quotation?solutionId={{id}}" target="_blank">查看报价</a></td>
        {{/of}}
        <td>{{formatDate updatedAt}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
